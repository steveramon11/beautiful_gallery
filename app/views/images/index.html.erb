<p id="notice"><%= notice %></p>

<h1>Gallery</h1>

<p>Upload a new image or click on a thumbnail below to see more details!</p>

<table>
  <thead>
    <tr>
      <th>Thumbnail</th>
    </tr>
  </thead>
  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= link_to image_tag(url_for(image.picture), height: 200, width: 200), image %></td>
        <td><%= link_to 'Delete', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'upload new image', new_image_path %>
